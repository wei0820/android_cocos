<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="368dp"
        android:layout_height="226dp"
        >

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="354dp"
            android:layout_height="226dp"
            android:background="@mipmap/icon_bg">
        <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn"
                    android:fontFamily="@font/reg"
                    android:text="验证码"
                    android:textColor="#66493D"
                    android:textSize="14dp"></TextView>

                <EditText
                    android:imeOptions="flagNoExtractUi"
                    android:maxLength ="4"                    android:textColorHint="#B79F93"
                    android:textColor="#B79F93"
                    android:paddingLeft="8dp"
                    android:fillViewport="true"
                android:hint="请输入验证码"
            android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:id="@+id/edt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn"
                    android:layout_toRightOf="@+id/text"
                    android:background="@mipmap/icon_4"
                    android:fontFamily="@font/reg"
                    android:textSize="16dp"></EditText>
                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:id="@+id/img"
                    android:layout_above="@+id/btn"
                    android:layout_toRightOf="@+id/edt"
                    android:layout_width="65dp"
                    android:layout_height="27dp"
                    ></ImageView>
                <RelativeLayout
                    android:layout_marginLeft="4dp"

                    android:layout_gravity="center"

                    android:id="@+id/lay"
                    android:layout_above="@+id/btn"
                    android:layout_toRightOf="@+id/img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/reload"
                        android:background="@mipmap/icon_1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        ></ImageView>
                </RelativeLayout>

            </LinearLayout>


            <ImageButton
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:background="@mipmap/icon_7"></ImageButton>

        </RelativeLayout>
        <ImageButton
            android:layout_alignParentRight="true"
            android:id="@+id/close"
            android:background="@mipmap/icon_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            ></ImageButton>
    </RelativeLayout>


</RelativeLayout>